<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    android:padding="12dp">

    <!-- Repo Name (Absolute Top Right) -->
    <TextView
        android:id="@+id/widget_repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="4dp"
        android:text="Repo"
        android:textColor="#5C85C3"
        android:textSize="10sp"
        android:textStyle="italic"
        android:alpha="0.8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

    <!-- Header: Title and Difficulty with Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <!-- Prev Arrow -->
        <ImageButton
            android:id="@+id/widget_btn_prev"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#FFFFFF"
            android:contentDescription="Previous" />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">
            
            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />
                
            <TextView
                android:id="@+id/widget_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Difficulty â€¢ Topic"
                android:textColor="#BBBBBB"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Next Arrow -->
        <ImageButton
            android:id="@+id/widget_btn_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#FFFFFF"
            android:contentDescription="Next" />
    </LinearLayout>

    <!-- Seen Badge (Overlay or separate?) Let's keep it simple for now, maybe below header -->
    <TextView
        android:id="@+id/widget_seen_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘ Seen"
        android:textColor="#4CAF50"
        android:textSize="10sp"
        android:background="#1A4CAF50"
        android:padding="2dp"
        android:visibility="gone"
        android:layout_marginBottom="4dp"/>

    <!-- Metadata: Intuition, Technique, Complexity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3C3F41"
        android:padding="8dp"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:id="@+id/widget_intuition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intuition: ..."
            android:textColor="#A9B7C6"
            android:textSize="11sp"
            android:maxLines="2"
            android:ellipsize="end" />
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            
            <TextView
                android:id="@+id/widget_technique"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tech: ..."
                android:textColor="#CC7832"
                android:textSize="11sp" />
                
            <TextView
                android:id="@+id/widget_complexity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: O(N) | Space: O(1)"
                android:textColor="#9876AA"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Code List -->
    <ListView
        android:id="@+id/widget_code_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/widget_tap_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Tap header to view full problem"
        android:textColor="#5C85C3"
        android:textSize="10sp"
        android:gravity="center" />

    </LinearLayout>
</RelativeLayout>
